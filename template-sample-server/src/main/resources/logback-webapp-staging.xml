<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder name="enc" class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="templatesample.utils.LogbackPatternLayout">
                <pattern>%d{MM-dd HH:mm:ss} %highlight(%-5level) %cyan(%-36logger{36}) %m %magenta(%userSession){}%blue(%ip){}%n</pattern>
            </layout>
        </encoder>
    </appender>

    <root level="WARN">
        <appender-ref ref="stdout"/>
    </root>

    <logger name="templatesample" level="INFO"/>

    <!-- Spring noise -->
    <logger name="templatesample.error.ApplicationExceptionHandlerExceptionResolver" level="WARN"/>
    <logger name="org.spring.aop.framework.CglibAopProxy" level="INFO"/>
</configuration>
